<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/sceneform_ux_fragment"
        android:name="com.numad19f.udesign.WritingArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--         android:name="com.google.ar.sceneform.ux.ArFragment" -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sofa1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/sofa1" />

            <ImageView
                android:id="@+id/sofa2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/sofa2" />

            <ImageView
                android:id="@+id/chair"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/chair" />

            <ImageView
                android:id="@+id/chair2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/chair2" />

            <ImageView
                android:id="@+id/bed"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/bed1" />

            <ImageView
                android:id="@+id/tv"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/tv" />

            <ImageView
                android:id="@+id/bed2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/bed2" />

            <ImageView
                android:id="@+id/bluecabinet"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/bluecabinet" />

            <ImageView
                android:id="@+id/cabinet"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/cabinet3" />

            <ImageView
                android:id="@+id/cabinet3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/tvcenter" />

            <ImageView
                android:id="@+id/chair3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/chaiseorange" />

            <ImageView
                android:id="@+id/lamp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/lamp2" />

            <ImageView
                android:id="@+id/shelf"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/shelf" />

            <ImageView
                android:id="@+id/table"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/table3" />

            <ImageView
                android:id="@+id/bartable"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/bartable" />

            <ImageView
                android:id="@+id/barstool"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/chair_ottoman" />

            <ImageView
                android:id="@+id/bench"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/bench" />

            <ImageView
                android:id="@+id/plant1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/plant1" />

            <ImageView
                android:id="@+id/plant2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/plant2" />

            <ImageView
                android:id="@+id/tree"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/tree" />
        </LinearLayout>


    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left | end |bottom"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_delete"

        />



</FrameLayout>